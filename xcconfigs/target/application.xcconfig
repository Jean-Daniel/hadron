
GCC_DYNAMIC_NO_PIC = $(LD_NO_PIE)

OTHER_LDFLAGS = $(inherited) $(HA_TARGET_LDFLAGS)

// All iOS based bundles use modern bundle layout
LD_RUNPATH_SEARCH_PATHS[sdk=ios] = $(inherited) @executable_path/Frameworks
LD_RUNPATH_SEARCH_PATHS[sdk=watchos*] = $(inherited) @executable_path/Frameworks
LD_RUNPATH_SEARCH_PATHS[sdk=appletvos*] = $(inherited) @executable_path/Frameworks

LD_RUNPATH_SEARCH_PATHS[sdk=macos*] = $(inherited) @executable_path/../Frameworks
